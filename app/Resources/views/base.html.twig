            <style>
                .footer{ margin-top: 50px; }
            </style>
        {% endblock %}
    </head>
    <body>
        <div class="container">
        {% block header %}
        <div class="page-header">
            <h1>
                <a href="{{ path('homepage') }}">Auctions!</a>
                <small>Ejemplo de Service Cointainer</small>
            </h1>
        </div>
        {% endblock %}
        {% block body %}
            <div class="row">
                <div class="col-md-7 text-justify">
                {% block content %}{% endblock %}
                </div>
                <div class="col-md-4 col-md-offset-1">
                    <h3>Ãšltimas subastas</h3>
                    {{ render(controller('AppBundle:Default:auctions')) }}
                </div>
            </div>
        {% endblock %}
            <div class="row footer">
                <p class="text-center text-muted">
                    Programado por <a href="http://github.com/4lb0/">albo</a> @ <a href="http://pragmore.com">Pragmore</a>
                    | <a rel="license" href="https://github.com/4lb0/services-en-symfony/blob/master/LICENSE">Licencia</a>
                </p>
            </div>
        </div>
        {% block javascripts %}
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
